@model RailConnect.Models.UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<h1>Korisnički detalji</h1>

<h4>Korisnik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Ime</dt>
            <dd class="col-sm-10">@Model.Ime</dd>

            <dt class="col-sm-2">Prezime</dt>
            <dd class="col-sm-10">@Model.Prezime</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Role</dd>

            <dt class="col-sm-2">Slika</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Slika))
                {
                    <img src="data:image/jpeg;base64,@Model.Slika" alt="Profile Picture" style="width:100px;height:100px;" />
                }
            </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@model IEnumerable<RailConnect.Models.Voz>

@{
    ViewData["Title"] = "Index";
}

<h1>Naši vozovi</h1>

<p>
    @if (User.IsInRole("Administrator") || User.IsInRole("Zaposlenik"))
{

        <a asp-action="Create" class="btn btn-primary">Create New</a>
                    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdVoz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vrsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kapacitet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdVoz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vrsta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kapacitet)
            </td>
            <td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Zaposlenik"))

                    {

                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdVoz">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdVoz">Delete</a>
                    }
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdVoz">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>

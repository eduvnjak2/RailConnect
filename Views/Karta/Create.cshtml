@model RailConnect.Models.KartaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiraj kartu</h1>

<h4>Karta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PutovanjeId" />
            <input type="hidden" asp-for="IdStanicaPolazak" />
            <input type="hidden" asp-for="IdStanicaDolazak" />
            <input type="hidden" asp-for="PutnikId" />

            <div class="form-group">
                <label asp-for="StanicaPolazakNaziv" class="control-label"></label>
                <input asp-for="StanicaPolazakNaziv" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="StanicaDolazakNaziv" class="control-label"></label>
                <input asp-for="StanicaDolazakNaziv" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NacinPlacanja" class="control-label"></label>
                <select asp-for="NacinPlacanja" class="form-control" asp-items="Html.GetEnumSelectList<NacinPlacanja>()"></select>
                <span asp-validation-for="NacinPlacanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="margin-top:5px;" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary" style="margin-top:5px;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

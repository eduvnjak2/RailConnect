@model RailConnect.Models.KartaViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Da li ste sigurni da želite obrisati ovo?</h3>
<div>
    <h4>Karta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Stanica Polazak:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StanicaPolazakNaziv)
        </dd>
        <dt class="col-sm-2">Stanica Dolazak:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StanicaDolazakNaziv)
        </dd>
        <dt class="col-sm-2">Putnik Id:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PutnikId)
        </dd>
        <dt class="col-sm-2">Putovanje Id:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PutovanjeId)
        </dd>
        <dt class="col-sm-2">Nacin Placanja:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NacinPlacanja)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdKarta" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
